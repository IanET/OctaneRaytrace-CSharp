<Window x:Class="OctaneRaytrace_CSharp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="350" Width="525">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <TextBox x:Name="textBlock" Margin="10" TextWrapping="Wrap" Grid.Row="1" VerticalScrollBarVisibility="Auto"/>
        <ToolBar VerticalAlignment="Center">
            <Button Content="Benchmark" VerticalAlignment="Center" Margin="5" Click="BenchmarkButton_Click"/>
            <Button Content="Render" VerticalAlignment="Center" Margin="5" Click="RenderButton_Click"/>
        </ToolBar>

    </Grid>
</Window>
